	<!-- 전체 레코드 수 조회 -->
	<select id="boardListCnt" parameterType="notice"
		resultType="int">
		SELECT count(*) FROM
		(SELECT * FROM tb_common_board
		WHERE member_type_id
		= 3)
		<!-- <trim prefix=" where (" suffix=")">
			<include refid="boardSearch"></include>
		</trim> -->
	</select>



	<select id="boardList" parameterType="notice"
		resultMap="noticeMap">
	    <![CDATA[
		SELECT
			common_no, admin_id, member_type_id, common_nickname,
			common_title, common_content, to_char(common_register_date, 'YYYY-MM-DD') as common_register_date,
			to_char(common_edit, 'YYYY-MM-DD') as common_edit, common_readcnt,
			common_block_confirm, to_char(common_block_date, 'YYYY-MM-DD') as common_block_date, common_file
		FROM (
			SELECT /*+ INDEX_DESC(tb_common_board pk_tb_common_board */
				rownum as rnum, common_no, admin_id, member_type_id, common_nickname,
				common_title, common_content, common_register_date,  common_edit,
				common_readcnt, common_block_confirm, common_block_date, common_file
			FROM tb_common_board
			WHERE ]]>
		<!-- <trim prefix="(" suffix=") AND " prefixOverrides="AND">
			<include refid="boardSearch"></include>
		</trim> -->
			<![CDATA[	rownum <= #{pageNum} * #{amount}
			) boardList
		WHERE rnum > (#{pageNum} - 1 ) * #{amount}
			]]>
	</select>
</mapper>